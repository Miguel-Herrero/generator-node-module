{
  "name":  "<%= name %>",
  "version": "<%= version %>",
  "description": "<%= description %>",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:linter:show && npm run test:unit:show",
    "test:report": "npm run test:linter:report && npm run test:unit:report && npm run test:cover:report",
    "test:linter:show": "./bin/test/linter-show",
    "test:unit:show": "./bin/test/unit-show",
    "test:cover:show": "./bin/test/cover-show",
    "test:linter:report": "./bin/test/linter-report",
    "test:unit:report": "./bin/test/unit-report",
    "test:cover:report": "./bin/test/cover-report"
  },
  "repository": {
    "type": "git",
    "url": "git+<%= gitrepository %>"
  },
  
  "keywords": [
    "lib"
  ],
   "author": {
    "name": "<%= author %>",
    "email": "<%= email %>",
    "url": "<%= url %>"
  },
  "license": "MIT",
  "bugs": {
    "url": "<%= gitrepository %>/issues"
  },
  "homepage": "<%= gitrepository %>#readme",
  "devDependencies": {
    "chai": "^3.5.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "standard": "^8.6.0"
  },

  "standard":  {
    "env": {
      "node": true,
      "mocha": true
    }
  }
}