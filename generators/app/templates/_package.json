{
  "name":  "<%= name %>",
  "version": "<%= version %>",
  "description": "<%= description %>",
  "main": "index.js",
  "scripts": {
    "test": "npm run lint && npm run cover:unit",
    "test:unit": "./bin/test/unit",
    "test:int": "./bin/test/int",
    "cover": "./bin/test/cover",
    "cover:unit": "./bin/test/cover-unit",
    "lint": "./bin/test/linter",
    "serve:coverage": "./bin/serve/coverage",
    "serve:linter": "./bin/serve/linter"
  },
  "repository": {
    "type": "git",
    "url": "git+<%= gitrepository %>"
  },

  "keywords": [
    "lib"
  ],
   "author": {
    "name": "<%= author %>",
    "email": "<%= email %>",
    "url": "<%= url %>"
  },
  "license": "MIT",
  "bugs": {
    "url": "<%= gitrepository %>/issues"
  },
  "homepage": "<%= gitrepository %>#readme",
  "devDependencies": {
    "chai": "^3.5.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "standard": "^8.6.0",
    "http-server": "^0.9.0"
  },

  "standard":  {
    "env": {
      "node": true,
      "mocha": true
    }
  }
}
